    </a>

    <script>
        // Men√∫ hamburguesa
        const menuBtn = document.getElementById('menuBtn');
        const sideMenu = document.getElementById('sideMenu');
        const overlay = document.getElementById('overlay');

        menuBtn.onclick = () => {
            sideMenu.classList.toggle('active');
            overlay.classList.toggle('active');
        };

        overlay.onclick = () => {
            sideMenu.classList.remove('active');
            overlay.classList.remove('active');
        };

        // L√≥gica de carrito
        let totalItems = 0;
        function changeQty(id, d) {
            let s = document.querySelector(`#${id} .qty-num`);
            let v = parseInt(s.innerText) + d;
            if (v > 0) s.innerText = v;
        }

        function addToCart(id) {
            document.getElementById('clinkSound').play().catch(()=>{});
            const card = document.getElementById(id);
            const name = card.querySelector('.product-name').innerText;
            const qtyVal = parseInt(card.querySelector('.qty-num').innerText);
            
            totalItems += qtyVal;
            document.getElementById('cart-count').innerText = totalItems;

            const toast = document.getElementById('toast');
            document.getElementById('toast-msg').innerHTML = `<b>${qtyVal > 1 ? qtyVal + 'x ' : ''}${name}</b> a√±adido`;
            
            toast.classList.add('show');
            setTimeout(() => toast.classList.remove('show'), 2000);
            card.querySelector('.qty-num').innerText = "1";
        }
    </script>
